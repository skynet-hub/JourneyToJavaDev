<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox spacing="10.0" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="dev.magobolesaomako.databindingdemo.HelloController">
    <Label text="Addition Calculator" />
    <GridPane vgap="10.0" hgap="10.0" alignment="CENTER">
    <Label text="First Number: " />
    <TextField fx:id="firstNum" GridPane.columnIndex="1" />
    <Label text="SecondNum: "  GridPane.rowIndex="1"/>
    <TextField fx:id="secondNum" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label fx:id="sumLabel" text="Result: " GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>
</VBox>
